<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="0dp" android:left="-1dp" android:bottom="0dp" android:right="-1dp">
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape
                android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="@color/stepviewindicator_maincolor_secondary"
                    android:dashWidth="5dp"
                    android:dashGap="2dp"
                    />
            </shape>
        </rotate>
    </item>
</layer-list>